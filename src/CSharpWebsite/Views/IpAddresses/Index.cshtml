@model IEnumerable<CSharpWebsite.Models.IpAddress>

@{
    ViewData["Title"] = "Index";
}
<div class="well">
    <h2>Static IP Addresses and Machine Info</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <th>
                        Hostname
                    </th>
                    <th>
                        IPv4
                    </th>
                    <th>
                        IPv6
                    </th>
                    <th>
                        Container
                    </th>
                    <th>
                        Virtual Machine
                    </th>
                    <th>
                        Docker
                    </th>
                    <th>
                        Operating System
                    </th>
                    <th>
                        Description
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.hostname)
                        </td>
                        <td>
                            <a href='http://@Html.DisplayFor(modelItem => item.ipv4)'>@Html.DisplayFor(modelItem => item.ipv4)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ipv6)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.container)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.vm)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.docker)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.operating_system)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
</div>